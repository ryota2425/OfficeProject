<!doctype html>

<html lang="ja">
    <%- include('./header_video'); %>

    <body>
        <%- include('./navbar'); %>

        <!-- æ©Ÿæ¢°å -->
        <h1 id="videoinfo"></h1>

        <!-- æ©Ÿæ¢°åä¸€è¦§ -->
        <form name="pullForm" class="pullForm">
            <select name="pullMenu" id="machine_name_list" onChange="screenChange()" class="pullForm">
                <option>æ©Ÿæ¢°åä¸€è¦§</option>
            </select>
        </form>

        <hr>
